{
  "compilerOptions": {
    "module": "es2015",
    "target": "es6",
    "declaration": true,
    "outDir": "dist",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true
  },
  "exclude": ["node_modules", "lib"]
}
